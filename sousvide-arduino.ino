void setup() {
  // setup code here, it is run once at startup
  pinMode(redButtonPin, INPUT_PULLUP);
  pinMode(blueButtonPin, INPUT_PULLUP);
  pinMode(pwmPin, OUTPUT); 
  
  oled.begin(SSD1306_SWITCHCAPVCC, 0x3C);
  oled.clearDisplay();
  oled.drawBitmap(0,0,splash,imageWidth,imageHeight,WHITE);
  oled.display();
  delay(500);
  sensors.begin();
  oled.setTextColor(WHITE);
  sensors.requestTemperatures();
  sensors.getAddress(tempDeviceAddress, 0);
  currentTemperature = sensors.getTempCByIndex(0);
}

void loop() {

  redButtonState  = digitalRead(redButtonPin);
  blueButtonState = digitalRead(blueButtonPin);

  

  if(redButtonState == LOW && pwmLevel < 245) {
    //goalTemperature += 0.5;
    pwmLevel += 10;

  }

  if(blueButtonState == LOW && pwmLevel > 10) {
    //goalTemperature -= 0.5;
    pwmLevel -= 10;
  }

  if (millis() %1000 == 0) {
    sensors.requestTemperatures();
    sensors.getAddress(tempDeviceAddress, 0);
    currentTemperature = sensors.getTempCByIndex(0);
  }
  

  analogWrite(pwmPin, pwmLevel);

  oled.clearDisplay();

  oled.setTextSize(2);
  oled.setCursor(0,0);
  /*oled.print("Goal:");
  oled.print(String(goalTemperature,1));
  oled.println("C");*/
  oled.print("Curr:");
  oled.print(String(currentTemperature,1));
  oled.println("C");
  oled.print("PWM:");
  oled.print(String(pwmLevel));
  oled.display();

}
